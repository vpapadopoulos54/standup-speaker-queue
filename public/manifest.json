{
  "manifest_version": 3,
  "name": "Standup Queue",
  "version": "1.0.0",
  "description": "Manage your team's standup speaking order with random selection and queue tracking",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Standup Queue"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
